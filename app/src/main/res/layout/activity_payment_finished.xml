<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PaymentFinishedActivity">

    <ImageView
        android:id="@+id/payment_finished_congrats"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/lend_red_base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/congrats_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parabêns !"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/payment_finished_congrats"
        app:layout_constraintEnd_toEndOf="@id/payment_finished_congrats"
        app:layout_constraintStart_toStartOf="@id/payment_finished_congrats"
        app:layout_constraintTop_toTopOf="@id/payment_finished_congrats"
        app:layout_constraintVertical_bias=".2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagamento confirmado com sucesso ;)"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/payment_finished_congrats"
        app:layout_constraintEnd_toEndOf="@id/payment_finished_congrats"
        app:layout_constraintStart_toStartOf="@id/payment_finished_congrats"
        app:layout_constraintTop_toBottomOf="@id/congrats_word"
        app:layout_constraintVertical_bias=".2" />

    <TextView
        android:id="@+id/payment_resume_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Resumo da Compra"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payment_finished_congrats" />

    <ImageView
        android:id="@+id/payment_resume_image"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_splash_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_resume_label" />

    <TextView
        android:id="@+id/payment_resume_meal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Bolo de chocolate"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payment_resume_image" />

    <TextView
        android:id="@+id/payment_resume_meal_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="A fundadora da rede, atual sócia-diretora industrial, Ivani fhjfs fjsfdfns fnuisfnfnsfn snfinfnfnuin nfnfu ndfnfndnfnfuis nfnfio niunfuisn "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/payment_resume_meal_title"
        app:layout_constraintTop_toBottomOf="@id/payment_resume_meal_title" />

    <TextView
        android:id="@+id/payment_resume_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/payment_resume_meal_description"
        app:layout_constraintStart_toStartOf="@id/payment_resume_meal_title"
        android:textSize="26sp"
        android:textColor="@android:color/holo_green_dark"
        android:text="R$ 32,49" />


</androidx.constraintlayout.widget.ConstraintLayout>